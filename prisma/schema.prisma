// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  image     String?
  firstName String
  lastName  String
  mobile    String
  email     String  @unique
  role      Role    @default(SALES_MANAGER)
  password  String
  location  String
  leads     Lead[]  @relation("SalesManagerLeads")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id           String     @id @default(uuid())
  name         String
  email        String
  phone        String
  status       LeadStatus @default(NEW)
  source       String?
  assignedTo   User?      @relation("SalesManagerLeads", fields: [assignedToId], references: [id])
  assignedToId String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

enum Role {
  SUPER_ADMIN
  ADMIN
  SALES_MANAGER
}

enum LeadStatus {
  NEW
  CONTACTED
  FOLLOW_UP
  ENROLLED
  LOST
}
